<h2>
  Patients
  <small><%= @patients.count %></small>

  <span class="pull-right">
    <%= link_to 'Invite', new_admin_invitation_path, class: 'btn btn-success' %>
  </span>
</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Date of birth</th>
      <th>City</th>
      <th>Insurer</th>
      <th>Requests / consultations</th>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.full_name %></td>
        <td><%= patient.gender.try(:capitalize) %></td>
        <td><%= patient.dob %></td>
        <td><%= patient.city %></td>
        <td><%= patient.insurance_policy.try(:insurance_company).try(:name) %></td>
        <td><%= patient.consultation_requests.size %> / <%= patient.consultations.size %></td>
      </tr>
    <% end %>
  </tbody>
</table>
