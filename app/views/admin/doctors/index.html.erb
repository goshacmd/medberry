<h2>
  Doctors
  <small><%= @doctors.count %></small>

  <span class="pull-right">
    <%= link_to 'Invite', new_admin_invitation_path, class: 'btn btn-success' %>
  </span>
</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Practice</th>
      <th>Requests / consultations</th>
      <th>Patients</th>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.full_name %></td>
        <td><%= doctor.practice %></td>
        <td><%= doctor.consultation_requests.size %> / <%= doctor.consultations.size %></td>
        <td><%= doctor.doctor_patient_connections.size %></th>
      </tr>
    <% end %>
  </tbody>
</table>
