{{#modal-dialog action="closeModal"}}
  <div class="modal-header">
    <h4 class="modal-title">{{t 'new_request.header'}}</h4>
  </div>

  <form class="form-horizontal">
    <div class="modal-body">
      {{#if hasError}}
        <div class="alert alert-danger">
          <p>{{t 'new_request.error_p'}}</p>
        </div>
      {{/if}}

      <div class="form-group">
        <label class="col-sm-2 control-label">{{t 'new_request.provider_label'}}</label>
        <div class="col-sm-10">
          <p class="form-control-static">Dr. {{doctor.fullName}}</p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">{{t 'new_request.cause_label'}}</label>
        <div class="col-sm-10">
          {{view Ember.Select
                 class="form-control"
                 content=causeCategories
                 value=causeCategoryId
                 optionValuePath="content.slug"
                 optionLabelPath="content.humanLabel"}}
        </div>
      </div>
    </div>

    <div class="modal-footer">
      <button type="submit" {{action 'createRequest'}} class="btn btn-primary" {{bind-attr disabled="isSaving"}}>
        {{#if isSaving}}
          {{t 'new_request.place_button_progress'}}
        {{else}}
          {{t 'new_request.place_button'}}
        {{/if}}
      </button>
    </div>
  </form>
{{/modal-dialog}}
