{{#modal-dialog action="closeModal"}}
  <div class="modal-header">
    <h4 class="modal-title">Request a consultation</h4>
  </div>

  <form class="form-horizontal" {{action "createRequest"}}>
    <div class="modal-body">
      {{#if hasError}}
        <div class="alert alert-danger">
          <p>You already have an active request or are in the middle of consultation.</p>
        </div>
      {{/if}}

      <div class="form-group">
        <label class="col-sm-2 control-label">Provider</label>
        <div class="col-sm-10">
          <p class="form-control-static">Dr. {{doctor.fullName}}</p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Cause</label>
        <div class="col-sm-10">
          {{input value=cause type="text" class="form-control" placeholder="Reason for your appointment..."}}
        </div>
      </div>
    </div>

    <div class="modal-footer">
      <button type="submit" class="btn btn-primary" {{bind-attr disabled="isSaving"}}>
        {{#if isSaving}}Placing a request...{{else}}Place a request{{/if}}
      </button>
    </div>
  </form>
{{/modal-dialog}}
