{{#if currentUser.isDoctor}}
  <form class="pad">
    <div class="form-group">
      <label>{{t 'consultation.diagnosis'}}</label>
      {{view Ember.Select
             class="form-control"
             content=diagnosisCategories
             value=diagnosisCategoryId
             optionValuePath="content.slug"
             optionLabelPath="content.humanLabel"}}
    </div>

    <div class="form-group">
      <label>{{t 'consultation.advice'}}</label>
      {{textarea class="form-control"
                 placeholder="Enter advice for the patient..."
                 value=advice}}
    </div>

    <button type="submit" class="btn btn-primary"
            {{action 'saveAdvice'}}
            {{bind-attr disabled="isSaving"}}>
      {{t 'consultation.save_advice_button'}}
    </button>
  </form>
{{/if}}
