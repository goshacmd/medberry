<h4>{{t 'queue.header'}}</h4>

{{#if content}}
  <a href="#" class="btn btn-success" {{action 'acceptNext'}}>
    {{t 'queue.next_button' name=nextRequest.patient.fullName}}
  </a>

  <div class="row">
    {{#each}}
      <div class="col-md-3 col-sm-4 col-xs-6 text-center">
        <div class="panel panel-default patient-card">
          <div class="panel-body">
            <h4>
              {{online-dot isOffline=patient.isOffline}}

              {{patient.fullName}}
            </h4>

            <h6>
              {{cause}}
            </h6>

            <img {{bind-attr src="patient.avatarUrl"}} class="img-circle">

            <h6>{{formatTime createdAt}}</h6>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <p>{{t 'queue.nothing'}}</p>
{{/if}}
