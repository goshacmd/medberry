<div class="messages-area">
  {{#each controller}}
    {{#if id}}
      <p>
        {{senderRole}}: {{text}}
        <span class="pull-right">{{formatTime createdAt}}</span>
      </p>
    {{else}}
      <p>
        {{text}}
        <span class="pull-right"><i>Sending...</i></span>
      </p>
    {{/if}}
  {{else}}
    <p>No messages.</p>
  {{/each}}
</div>

<form {{action 'sendMessage'}}>
  <div class="form-group">
    {{input type="text" value=newMessage placeholder="Type your message..." class="form-control"}}
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary" {{bind-attr disabled="cannotSendMessage"}}>Send</button>
  </div>
</form>
